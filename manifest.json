{
  "manifest_version": 3,
  "name": "PiPlex",
  "version": "1.1.0",
  "description": "Adds picture in picture support for Plex",
  "short_name": "PiPlex",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://app.plex.tv/*"],
      "js": ["background.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  }
}
